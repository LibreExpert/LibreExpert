{
  "compilerOptions": {
    "composite": true,
    "baseUrl": "src", // Указываем корневую директорию для путей
    "paths": {
      "@/*": ["*"], // Общий алиас для всех папок
      "@/components/*": ["components/*"], // Алиас для components
      "@/lib/*": ["lib/*"] // Алиас для lib
    },
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Изменяем на node для корректной работы с путями
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"], // "components" уже включен через "src"
  "exclude": ["node_modules", "dist"] // Добавляем исключение для node_modules и сборки
}
